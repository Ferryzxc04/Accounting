<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/pem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_below="@+id/text_notifications">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Pemasukan (Debet)"
            android:textColor="@color/hitam"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="@color/hitam"
            android:layout_marginStart="50dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Rp "
            android:textColor="@color/hitam"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/total_pem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 "
            android:textColor="@color/hitam"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/peng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/pem"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Pengeluaran (Kredit)"
            android:textColor="@color/hitam"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="@color/hitam"
            android:layout_marginStart="44dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Rp "
            android:textColor="@color/hitam"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/total_peng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 "
            android:textColor="@color/hitam"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/akhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/peng"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="SALDO AKHIR"
            android:textStyle="bold"
            android:textColor="@color/hitam"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textStyle="bold"
            android:textColor="@color/hitam"
            android:layout_marginStart="55dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Rp "
            android:textStyle="bold"
            android:textColor="@color/hitam"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/total_sal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="0 "
            android:textColor="@color/hitam"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>